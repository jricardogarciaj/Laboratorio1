<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.example.quenota.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/lightblue">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nota de practicas (60%)"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/Practicas"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/lightcyan">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Primer avance (5%)"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/Pavance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/lightyellow">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Segundo avance (7%)"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/Savance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/antiquewhite">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tercer avance (8%)"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/Tavance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/lightskyblue">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Aplicacion final (20%)"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/Aplicacion"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/antiquewhite">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/calcular"
                android:text="Calcular nota"
                android:background="@color/lightseagreen"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
